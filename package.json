{
    "name": "server",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "lint": "eslint --format table --fix .",
        "start": "npm run build-client & node index.js",
        "server": "nodemon index.js --ignore tests",
        "build-client": "npm run clean && parcel build client/src/index.html --out-dir client/build",
        "dev-client": "npm run clean && parcel client/src/index.html --out-dir client/build",
        "clean": "rm -rf .cache client/build"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "axios": "^0.16.2",
        "babel-core": "^6.26.3",
        "babel-plugin-transform-class-properties": "^6.24.1",
        "babel-plugin-transform-object-rest-spread": "^6.26.0",
        "babel-polyfill": "^6.26.0",
        "babel-preset-env": "^1.7.0",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-react": "^6.24.1",
        "babel-preset-stage-0": "^6.24.1",
        "body-parser": "^1.17.2",
        "express": "^4.15.3",
        "history": "^4.10.1",
        "html-react-parser": "^0.9.1",
        "materialize-css": "^0.100.2",
        "mongoose": "^4.11.1",
        "nanoid": "^2.1.2",
        "parcel-bundler": "^1.12.4",
        "path": "^0.12.7",
        "path-parser": "^2.0.2",
        "react": "^16.0.0-alpha.13",
        "react-dom": "^16.0.0-alpha.13",
        "react-router-dom": "^5.1.1",
        "react-scripts": "1.0.10",
        "redis": "^2.8.0",
        "shortid": "^2.2.8",
        "util": "^0.11.1",
        "uuid": "^3.2.1",
        "valid-url": "^1.0.9"
    },
    "devDependencies": {
        "babel-eslint": "^10.0.3",
        "eslint": "^6.5.1",
        "eslint-config-airbnb": "^18.0.1",
        "eslint-config-prettier": "^6.4.0",
        "eslint-config-react-app": "^5.0.2",
        "eslint-plugin-import": "^2.18.2",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-prettier": "^3.1.1",
        "eslint-plugin-react": "^7.16.0",
        "husky": "^3.0.8",
        "lint-staged": "^9.4.2",
        "nodemon": "^1.19.3",
        "prettier": "^1.18.2",
        "pretty-quick": "^1.11.1"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "plugin:prettier/recommended"
        ]
    },
    "prettier": {
        "semi": true,
        "userTabs": true,
        "singleQuote": true
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint"
        }
    },
    "lint-staged": {
        "*.+(js|jsx)": [
            "pretty-quick --staged",
            "eslint client/src/ --fix",
            "git add"
        ],
        "*.+(json|css|md)": [
            "prettier --write",
            "git add"
        ]
    }
}
